<script type="text/html" id="propertyEditor-template">
    <div data-bind="foreach: Pet().Properties">
        <div class="form-group">
            <label class="control-label col-sm-4 required" data-bind="text: PropertyLabel">

            </label>
            <div class="col-sm-6" data-bind="switch: PropertyType">
                <div data-bind="case : 1">
                    <!-- text -->
                    <input type="text" class="form-control" data-bind="value: PropertyValue" />
                </div>
                <div data-bind="case : 2">
                    <!-- boolean (true/ false) -->
                    <input type="checkbox" class="form-control" data-bind="checked: PropertyValue_Bool" />
                </div>
                <div data-bind="case : 3">
                    <!-- numeric -->
                    <input type="text" class="form-control" data-bind="value: PropertyValue" />
                </div>
            </div>
        </div>
    </div>
</script>

<script type="text/html" id="propertyErrorSummary-template">

    <div class="alert alert-danger" data-bind="visible: Errors().length > 0">
        <strong>Please correct the following</strong>
        <ul data-bind="foreach: Errors">
            <li data-bind="text: ErrorMessage"></li>
        </ul>
    </div>

</script>

<script type="text/html" id="petType-PropertyList-template">
    <table class="table table-striped table-hover" data-bind="visible: Properties().length > 0">
        <thead>
            <tr>
                <th>Pet Type Property Name</th>                
                <th></th>
            </tr>
        </thead>
        <tbody data-bind="foreach: Properties">
            <tr>
                <td data-bind="text: PropertyName"></td>
                <td><a href="#" data-bind="click: $root.ShowPropertyEditor">Edit Pet Type Property</a></td>
            </tr>
        </tbody>
    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" value="Add Pet Type" class="btn btn-default" data-bind="click: ShowPropertyEditor">Add Pet Type Property</button>
        </div>
    </div>

</script>

<script type="text/html" id="petType-PropertyEditor-template">

    <div class="modal" id="ModalEdit">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Pet Property</h4>
                </div>
                <form action="#" data-bind="submit: SavePropertyChanges">
                    <div class="modal-body">

                        <div class="form-group">
                            <label class="control-label col-md-4">Property Name</label>
                            <div class="col-md-8">
                                <input type="text" data-bind="value: PropertyName" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4">Property Type</label>
                            <div class="col-md-8">
                                <select data-bind="value: PropertyType" class="form-control">
                                    <option value="1">Text</option>
                                    <option value="2">Boolean</option>
                                    <option value="3">Numeric</option>
                                </select>                                
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4">Required</label>
                            <div class="col-md-8">
                                <input type="checkbox" data-bind="checked: Required" class="form-control" />
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" data-bind="click: SavePropertyChanges">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</script>
